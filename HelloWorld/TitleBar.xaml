<UserControl x:Class="HelloWorld.TitleBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HelloWorld"
             mc:Ignorable="d" 
             Height="40"
             d:DesignWidth="600"
             Background="#222">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="40" />
            <ColumnDefinition Width="40" />
            <ColumnDefinition Width="40" />
        </Grid.ColumnDefinitions>

        <!-- Otsikko -->
        <TextBlock Text="Oma Sovellus" Foreground="White" 
                   VerticalAlignment="Center" Margin="10,0,0,0"/>

        <!-- Pienennysnappi -->
        <Button Grid.Column="1" Click="Minimize_Click"
                Content="−" Foreground="White"
                Background="Transparent" BorderBrush="Transparent"/>

        <!-- Suurenna/Paluunappi -->
        <Button Grid.Column="2" Click="MaximizeRestore_Click"
                Content="□" Foreground="White"
                Background="Transparent" BorderBrush="Transparent"/>

        <!-- Suljenappi -->
        <Button Grid.Column="3" Click="Close_Click"
                Content="X" Foreground="White"
                Background="Transparent" BorderBrush="Transparent"/>
    </Grid>
</UserControl>
